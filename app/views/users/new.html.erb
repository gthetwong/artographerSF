<h1 class="head"><%=link_to "ArtographerSF", root_path %></h1>


<div class="container">
    <h2 class="signup">Sign me up!</h2>
    <div class="signup_form">
        <%= form_for(@user) do |f| %>
            <% unless @user.errors.count == 0   %>
            <div class="alert alert-error">
                The form contains <%= pluralize(@user.errors.count, "error") %>.
            </div>
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li>* <%= msg %></li>
            <% end %>
            </ul>
            <% end %>

            <%= f.label :name %>
            <br>
            <%= f.text_field :name %>
            <br>
            <%= f.label :email %>
            <br>
            <%= f.text_field :email %>
            <br>
            <%= f.label :password %>
            <br>
            <%= f.password_field :password %>
            <br>
            <%= f.label :password_confirmation, "Confirmation" %>
            <br>
            <%= f.password_field :password_confirmation %>
            <br>
            <%= f.submit "Create My Account!", :class => 'signup_btn' %>
        <% end %>
    </div>
</div>